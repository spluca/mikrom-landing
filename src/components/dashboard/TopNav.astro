---
/**
 * TopNav - Top navigation bar component
 *
 * @description
 * Top navigation bar spanning full width with search, notifications,
 * theme toggle, user menu, and mobile hamburger menu button.
 *
 * Features:
 * - Search input field
 * - Notifications button with badge indicator
 * - Theme toggle button (reuses ThemeToggle component)
 * - User menu dropdown
 * - Hamburger menu button for mobile
 * - Sticky positioning at top
 *
 * @example
 * ```astro
 * <TopNav />
 * ```
 */

import { Icon } from 'astro-icon/components';
import ThemeToggle from '../ui/ThemeToggle.astro';
import UserMenu from './UserMenu.astro';
---

<header class="top-nav">
  <div class="top-nav-container">
    <!-- Mobile Hamburger Menu Button (visible < 768px) -->
    <button
      type="button"
      id="mobile-menu-button"
      aria-label="Open navigation menu"
      aria-expanded="false"
      class="mobile-menu-btn md:hidden p-2 rounded-md hover:bg-surface transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
    >
      <Icon name="lucide:menu" class="w-6 h-6 text-text" />
    </button>

    <!-- Search Input -->
    <div class="search-container">
      <div class="search-wrapper">
        <Icon name="lucide:search" class="search-icon w-5 h-5 text-text-muted" />
        <input type="search" placeholder="Search..." aria-label="Search" class="search-input" />
      </div>
    </div>

    <!-- Right Side Actions -->
    <div class="actions-container">
      <!-- Notifications Button -->
      <button
        type="button"
        aria-label="Notifications"
        class="notification-btn p-2 rounded-md hover:bg-surface transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background relative"
      >
        <Icon name="lucide:bell" class="w-5 h-5 text-text" />
        <!-- Badge Indicator -->
        <span class="notification-badge" aria-label="3 unread notifications"> 3 </span>
      </button>

      <!-- Theme Toggle -->
      <ThemeToggle />

      <!-- User Menu -->
      <UserMenu />
    </div>
  </div>
</header>

<style>
  .top-nav {
    position: sticky;
    top: 0;
    width: 100%;
    height: 64px;
    background: var(--color-surface);
    border-bottom: 1px solid var(--color-border);
    z-index: 20;
  }

  .top-nav-container {
    display: flex;
    align-items: center;
    gap: 1rem;
    height: 100%;
    padding: 0 1rem;
    max-width: 100%;
  }

  /* Search Container */
  .search-container {
    flex: 1;
    max-width: 500px;
    min-width: 0;
  }

  @media (max-width: 767px) {
    .search-container {
      flex: 1;
      max-width: none;
      min-width: 0;
    }
  }

  .search-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .search-icon {
    position: absolute;
    left: 0.75rem;
    pointer-events: none;
  }

  .search-input {
    width: 100%;
    padding: 0.5rem 0.75rem 0.5rem 2.5rem;
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text);
    font-size: 0.875rem;
    transition: border-color 150ms ease;
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px oklch(from var(--color-primary) l c h / 0.1);
  }

  /* Actions Container */
  .actions-container {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-left: auto;
  }

  /* Notification Button */
  .notification-btn {
    position: relative;
  }

  .notification-badge {
    position: absolute;
    top: 0.25rem;
    right: 0.25rem;
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 1.25rem;
    height: 1.25rem;
    padding: 0 0.25rem;
    background: oklch(0.6 0.25 25); /* Error/alert color */
    color: white;
    font-size: 0.625rem;
    font-weight: 600;
    border-radius: 9999px;
    line-height: 1;
  }

  /* Mobile Menu Button */
  .mobile-menu-btn {
    flex-shrink: 0;
  }

  /* Responsive adjustments */
  @media (min-width: 768px) {
    .top-nav-container {
      padding: 0 1.5rem;
    }

    .search-container {
      flex: 0 1 auto;
      min-width: 200px;
    }
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .search-input,
    .notification-btn,
    .mobile-menu-btn {
      transition: none;
    }
  }
</style>

<script>
  /**
   * TopNav Client-Side Functionality
   *
   * Manages:
   * - Mobile menu toggle
   * - Search functionality (placeholder for future implementation)
   * - Notification interactions (placeholder for future implementation)
   */

  function initTopNav() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');

    if (mobileMenuButton) {
      mobileMenuButton.addEventListener('click', () => {
        // Dispatch custom event to open mobile navigation
        const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
        const newState = !isExpanded;

        mobileMenuButton.setAttribute('aria-expanded', String(newState));

        // Dispatch event for MobileNav component to listen to
        if (newState) {
          document.dispatchEvent(new CustomEvent('open-mobile-nav'));
        }
      });
    }

    // Listen for mobile nav toggle events to update button state
    document.addEventListener('mobile-nav-toggle', (e: Event) => {
      const customEvent = e as CustomEvent<{ open: boolean }>;
      if (mobileMenuButton) {
        mobileMenuButton.setAttribute('aria-expanded', String(customEvent.detail.open));
      }
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initTopNav);
  } else {
    initTopNav();
  }

  // Re-initialize on Astro page transitions (if using View Transitions)
  document.addEventListener('astro:page-load', initTopNav);
</script>
