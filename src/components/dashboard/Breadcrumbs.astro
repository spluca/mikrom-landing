---
/**
 * Breadcrumbs - Breadcrumb navigation component
 *
 * @description
 * Displays hierarchical breadcrumb navigation with chevron separators.
 * The last item is non-clickable (current page). Includes proper ARIA
 * labels for accessibility.
 *
 * Features:
 * - Chevron separators between items
 * - Last item non-clickable (current page)
 * - Proper ARIA labels
 * - Responsive truncation on mobile
 *
 * @example
 * ```astro
 * <Breadcrumbs
 *   items={[
 *     { label: 'Dashboard', href: '/dashboard' },
 *     { label: 'Projects', href: '/dashboard/projects' },
 *     { label: 'Project Name' }
 *   ]}
 * />
 * ```
 */

import { Icon } from 'astro-icon/components';

interface BreadcrumbItem {
  label: string;
  href?: string; // Last item typically has no href (current page)
}

interface Props {
  /** Array of breadcrumb items */
  items: BreadcrumbItem[];
}

const { items } = Astro.props;

// Ensure we have at least one item
if (!items || items.length === 0) {
  throw new Error('Breadcrumbs component requires at least one item');
}
---

<nav aria-label="Breadcrumb" class="breadcrumbs">
  <ol class="breadcrumb-list" role="list">
    {
      items.map((item, index) => {
        const isLast = index === items.length - 1;
        const isFirst = index === 0;

        return (
          <li class="breadcrumb-item">
            {/* Separator (not for first item) */}
            {!isFirst && (
              <Icon name="lucide:chevron-right" class="breadcrumb-separator" aria-hidden="true" />
            )}

            {/* Breadcrumb Link or Text */}
            {isLast ? (
              <span class="breadcrumb-current" aria-current="page">
                {item.label}
              </span>
            ) : (
              <a href={item.href} class="breadcrumb-link">
                {item.label}
              </a>
            )}
          </li>
        );
      })
    }
  </ol>
</nav>

<style>
  .breadcrumbs {
    display: flex;
    align-items: center;
  }

  .breadcrumb-list {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .breadcrumb-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .breadcrumb-separator {
    width: 1rem;
    height: 1rem;
    color: var(--color-text-muted, #6b7280);
    flex-shrink: 0;
  }

  .breadcrumb-link {
    font-size: 0.875rem;
    color: var(--color-text-muted, #6b7280);
    text-decoration: none;
    transition: color 150ms ease;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 200px;
  }

  .breadcrumb-link:hover {
    color: var(--color-primary, #6366f1);
    text-decoration: underline;
  }

  .breadcrumb-current {
    font-size: 0.875rem;
    color: var(--color-text, #000);
    font-weight: 500;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    max-width: 300px;
  }

  /* Mobile responsive adjustments */
  @media (max-width: 640px) {
    .breadcrumb-link {
      max-width: 120px;
    }

    .breadcrumb-current {
      max-width: 150px;
    }

    /* Hide middle items on very small screens, keep first and last */
    .breadcrumb-item:not(:first-child):not(:last-child) {
      display: none;
    }

    /* Show ellipsis when items are hidden */
    .breadcrumb-list:has(.breadcrumb-item:nth-child(3)) .breadcrumb-item:nth-child(2)::after {
      content: '...';
      color: var(--color-text-muted, #6b7280);
      margin: 0 0.25rem;
    }
  }

  /* Focus visible styles for keyboard navigation */
  .breadcrumb-link:focus-visible {
    outline: 2px solid var(--color-primary, #6366f1);
    outline-offset: 2px;
    border-radius: 0.25rem;
  }

  /* Respect reduced motion preference */
  @media (prefers-reduced-motion: reduce) {
    .breadcrumb-link {
      transition: none;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .breadcrumb-link {
      color: var(--color-text-muted, #9ca3af);
    }

    .breadcrumb-link:hover {
      color: var(--color-primary, #818cf8);
    }

    .breadcrumb-current {
      color: var(--color-text, #f9fafb);
    }

    .breadcrumb-separator {
      color: var(--color-text-muted, #6b7280);
    }
  }
</style>
