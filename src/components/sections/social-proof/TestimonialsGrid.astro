---
/**
 * TestimonialsGrid - Testimonials display with featured and regular sections
 *
 * @description
 * Displays testimonials in a grid layout with optional featured testimonials
 * shown prominently at the top.
 *
 * @example Basic usage
 * ```astro
 * <TestimonialsGrid
 *   testimonials={[
 *     { quote: "...", author: "Jane", role: "CEO", company: "Acme" }
 *   ]}
 * />
 * ```
 *
 * @example With featured testimonials
 * ```astro
 * <TestimonialsGrid
 *   featured={[...]}
 *   testimonials={[...]}
 * />
 * ```
 */

import { Icon } from 'astro-icon/components';

interface Testimonial {
  /** The testimonial quote */
  quote: string;
  /** Author's name */
  author: string;
  /** Author's role/title */
  role: string;
  /** Author's company */
  company: string;
  /** Optional avatar URL */
  avatar?: string;
}

interface Props {
  /** Featured testimonials (shown larger at top) */
  featured?: Testimonial[];
  /** Regular testimonials */
  testimonials?: Testimonial[];
  /** Message to show when no testimonials */
  emptyMessage?: string;
  /** Section background style */
  background?: 'default' | 'muted' | 'accent';
}

const {
  featured = [],
  testimonials = [],
  emptyMessage = 'No testimonials yet.',
  background = 'default',
} = Astro.props;

const bgClass = {
  default: 'bg-background',
  muted: 'bg-surface',
  accent: 'bg-primary/5',
}[background];

const getInitials = (name: string) =>
  name
    .split(' ')
    .map((n: string) => n[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);

const hasTestimonials = featured.length > 0 || testimonials.length > 0;
---

<section class:list={['py-section', bgClass]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      hasTestimonials ? (
        <>
          {/* Featured Testimonials */}
          {featured.length > 0 && (
            <div class="mb-16">
              <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                {featured.map((testimonial) => (
                  <div class="p-8 rounded-xl bg-primary/5 border border-primary/20">
                    <Icon name="lucide:quote" class="w-10 h-10 text-primary/40 mb-4" />
                    <blockquote class="text-xl text-text leading-relaxed">
                      "{testimonial.quote}"
                    </blockquote>
                    <div class="mt-6 flex items-center gap-4">
                      {testimonial.avatar ? (
                        <img
                          src={testimonial.avatar}
                          alt={testimonial.author}
                          class="w-14 h-14 rounded-full object-cover"
                          loading="lazy"
                        />
                      ) : (
                        <div class="w-14 h-14 rounded-full bg-primary/10 text-primary flex items-center justify-center text-lg font-semibold">
                          {getInitials(testimonial.author)}
                        </div>
                      )}
                      <div>
                        <div class="font-semibold text-text text-lg">{testimonial.author}</div>
                        <div class="text-text-muted">
                          {testimonial.role} at {testimonial.company}
                        </div>
                      </div>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          )}

          {/* Regular Testimonials Grid */}
          {testimonials.length > 0 && (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
              {testimonials.map((testimonial) => (
                <div class="p-6 rounded-lg bg-surface border border-border">
                  <blockquote class="text-text leading-relaxed">"{testimonial.quote}"</blockquote>
                  <div class="mt-6 flex items-center gap-4">
                    {testimonial.avatar ? (
                      <img
                        src={testimonial.avatar}
                        alt={testimonial.author}
                        class="w-12 h-12 rounded-full object-cover"
                        loading="lazy"
                      />
                    ) : (
                      <div class="w-12 h-12 rounded-full bg-primary/10 text-primary flex items-center justify-center font-semibold">
                        {getInitials(testimonial.author)}
                      </div>
                    )}
                    <div>
                      <div class="font-semibold text-text">{testimonial.author}</div>
                      <div class="text-sm text-text-muted">
                        {testimonial.role} at {testimonial.company}
                      </div>
                    </div>
                  </div>
                </div>
              ))}
            </div>
          )}
        </>
      ) : (
        <div class="text-center py-12">
          <p class="text-text-muted">{emptyMessage}</p>
        </div>
      )
    }
  </div>
</section>
