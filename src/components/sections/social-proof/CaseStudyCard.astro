---
/**
 * CaseStudyCard - Customer success stories display
 *
 * @description
 * Displays customer case studies with metrics, quotes, and company info.
 * Great for showcasing real-world results and building trust.
 *
 * @example Basic usage
 * ```astro
 * <CaseStudyCard
 *   title="Customer Stories"
 *   cases={[
 *     {
 *       company: "Acme Inc",
 *       logo: "/images/customers/acme.svg",
 *       quote: "Virex transformed our deployment process.",
 *       author: "Jane Doe",
 *       role: "CTO",
 *       metrics: [{ value: "50%", label: "Faster deploys" }],
 *       href: "/customers/acme"
 *     }
 *   ]}
 * />
 * ```
 */

import { Icon } from 'astro-icon/components';

interface Metric {
  /** Metric value (e.g., "50%", "10x") */
  value: string;
  /** Metric label */
  label: string;
}

interface CaseStudy {
  /** Company name */
  company: string;
  /** Company logo URL */
  logo?: string;
  /** Industry/category */
  industry?: string;
  /** Customer quote */
  quote: string;
  /** Quote author name */
  author: string;
  /** Author's role */
  role: string;
  /** Author's avatar */
  avatar?: string;
  /** Key metrics/results */
  metrics?: Metric[];
  /** Link to full case study */
  href?: string;
  /** Featured case study */
  featured?: boolean;
}

interface Props {
  /** Section title */
  title?: string;
  /** Section subtitle */
  subtitle?: string;
  /** Array of case studies */
  cases: CaseStudy[];
  /** Display variant */
  variant?: 'grid' | 'featured' | 'compact';
  /** Section background style */
  background?: 'default' | 'muted' | 'accent';
}

const { title, subtitle, cases, variant = 'grid', background = 'default' } = Astro.props;

const bgClass = {
  default: 'bg-background',
  muted: 'bg-surface',
  accent: 'bg-primary/5',
}[background];

const hasHeading = title || subtitle;

const getInitials = (name: string) =>
  name
    .split(' ')
    .map((n) => n[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
---

<section class:list={['py-section', bgClass]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      hasHeading && (
        <div class="text-center mb-12">
          {title && <h2 class="text-3xl sm:text-4xl font-bold text-text">{title}</h2>}
          {subtitle && <p class="mt-4 text-lg text-text-muted max-w-2xl mx-auto">{subtitle}</p>}
        </div>
      )
    }

    {/* Grid Variant */}
    {
      variant === 'grid' && (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {cases.map((caseStudy) => (
            <div class="group flex flex-col p-6 rounded-xl border border-border bg-background hover:border-primary/50 hover:shadow-lg transition-all">
              {/* Company Logo & Industry */}
              <div class="flex items-center justify-between mb-6">
                {caseStudy.logo ? (
                  <img
                    src={caseStudy.logo}
                    alt={caseStudy.company}
                    class="h-8 object-contain dark:invert"
                    loading="lazy"
                  />
                ) : (
                  <span class="font-semibold text-text">{caseStudy.company}</span>
                )}
                {caseStudy.industry && (
                  <span class="text-xs text-text-muted bg-surface px-2 py-1 rounded">
                    {caseStudy.industry}
                  </span>
                )}
              </div>

              {/* Metrics */}
              {caseStudy.metrics && caseStudy.metrics.length > 0 && (
                <div class="flex gap-6 mb-6">
                  {caseStudy.metrics.slice(0, 3).map((metric) => (
                    <div>
                      <div class="text-2xl font-bold text-primary">{metric.value}</div>
                      <div class="text-xs text-text-muted">{metric.label}</div>
                    </div>
                  ))}
                </div>
              )}

              {/* Quote */}
              <blockquote class="flex-1 text-text leading-relaxed mb-6">
                "{caseStudy.quote}"
              </blockquote>

              {/* Author */}
              <div class="flex items-center justify-between pt-4 border-t border-border">
                <div class="flex items-center gap-3">
                  {caseStudy.avatar ? (
                    <img
                      src={caseStudy.avatar}
                      alt={caseStudy.author}
                      class="w-10 h-10 rounded-full object-cover"
                      loading="lazy"
                    />
                  ) : (
                    <div class="w-10 h-10 rounded-full bg-primary/10 text-primary flex items-center justify-center text-sm font-semibold">
                      {getInitials(caseStudy.author)}
                    </div>
                  )}
                  <div>
                    <div class="font-medium text-text text-sm">{caseStudy.author}</div>
                    <div class="text-xs text-text-muted">{caseStudy.role}</div>
                  </div>
                </div>
                {caseStudy.href && (
                  <a
                    href={caseStudy.href}
                    class="text-sm text-primary hover:underline inline-flex items-center gap-1"
                  >
                    Read story
                    <Icon name="lucide:arrow-right" class="w-3 h-3" />
                  </a>
                )}
              </div>
            </div>
          ))}
        </div>
      )
    }

    {/* Featured Variant - Large cards */}
    {
      variant === 'featured' && (
        <div class="space-y-8">
          {cases.map((caseStudy, index) => (
            <div
              class:list={[
                'flex flex-col lg:flex-row gap-8 p-8 rounded-2xl border border-border bg-background',
                index % 2 === 1 && 'lg:flex-row-reverse',
              ]}
            >
              {/* Left: Metrics & Logo */}
              <div class="lg:w-1/3 flex flex-col">
                {caseStudy.logo ? (
                  <img
                    src={caseStudy.logo}
                    alt={caseStudy.company}
                    class="h-10 object-contain object-left mb-6 dark:invert"
                    loading="lazy"
                  />
                ) : (
                  <span class="text-xl font-bold text-text mb-6">{caseStudy.company}</span>
                )}

                {caseStudy.industry && (
                  <span class="text-sm text-text-muted mb-6">{caseStudy.industry}</span>
                )}

                {caseStudy.metrics && caseStudy.metrics.length > 0 && (
                  <div class="grid grid-cols-2 gap-4 mt-auto">
                    {caseStudy.metrics.map((metric) => (
                      <div class="p-4 rounded-lg bg-surface">
                        <div class="text-3xl font-bold text-primary">{metric.value}</div>
                        <div class="text-sm text-text-muted mt-1">{metric.label}</div>
                      </div>
                    ))}
                  </div>
                )}
              </div>

              {/* Right: Quote & Author */}
              <div class="lg:w-2/3 flex flex-col">
                <Icon name="lucide:quote" class="w-10 h-10 text-primary/30 mb-4" />
                <blockquote class="text-xl lg:text-2xl text-text leading-relaxed flex-1">
                  "{caseStudy.quote}"
                </blockquote>

                <div class="flex items-center justify-between mt-8 pt-6 border-t border-border">
                  <div class="flex items-center gap-4">
                    {caseStudy.avatar ? (
                      <img
                        src={caseStudy.avatar}
                        alt={caseStudy.author}
                        class="w-12 h-12 rounded-full object-cover"
                        loading="lazy"
                      />
                    ) : (
                      <div class="w-12 h-12 rounded-full bg-primary/10 text-primary flex items-center justify-center font-semibold">
                        {getInitials(caseStudy.author)}
                      </div>
                    )}
                    <div>
                      <div class="font-semibold text-text">{caseStudy.author}</div>
                      <div class="text-sm text-text-muted">
                        {caseStudy.role}, {caseStudy.company}
                      </div>
                    </div>
                  </div>
                  {caseStudy.href && (
                    <a
                      href={caseStudy.href}
                      class="hidden sm:inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-primary text-white hover:bg-primary-dark transition-colors"
                    >
                      Read full story
                      <Icon name="lucide:arrow-right" class="w-4 h-4" />
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      )
    }

    {/* Compact Variant - Logo wall with quotes */}
    {
      variant === 'compact' && (
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {cases.map((caseStudy) => (
            <a
              href={caseStudy.href || '#'}
              class="group flex items-start gap-4 p-5 rounded-xl border border-border bg-background hover:border-primary/50 transition-colors"
            >
              <div class="shrink-0 w-12 h-12 flex items-center justify-center rounded-lg bg-surface">
                {caseStudy.logo ? (
                  <img
                    src={caseStudy.logo}
                    alt={caseStudy.company}
                    class="w-8 h-8 object-contain dark:invert"
                    loading="lazy"
                  />
                ) : (
                  <span class="font-bold text-text text-sm">{caseStudy.company.slice(0, 2)}</span>
                )}
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-text text-sm leading-relaxed line-clamp-2">"{caseStudy.quote}"</p>
                <div class="mt-2 flex items-center gap-2 text-xs text-text-muted">
                  <span class="font-medium">{caseStudy.author}</span>
                  <span>â€¢</span>
                  <span>{caseStudy.company}</span>
                </div>
              </div>
              <Icon
                name="lucide:chevron-right"
                class="w-5 h-5 text-text-muted group-hover:text-primary transition-colors shrink-0"
              />
            </a>
          ))}
        </div>
      )
    }
  </div>
</section>
