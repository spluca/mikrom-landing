---
/**
 * TestimonialsSection - Flexible testimonials section with optional heading
 *
 * @description
 * A flexible testimonials section that can display with or without title/subtitle.
 * Displays testimonials in a responsive grid (1 column on mobile, 2 on tablet+).
 * Each testimonial card shows quote, author info, and optional avatar.
 *
 * @example With heading
 * ```astro
 * <TestimonialsSection
 *   title="Loved by developers"
 *   subtitle="Join thousands of teams who trust us."
 *   testimonials={[...]}
 * />
 * ```
 *
 * @example Grid only (no heading)
 * ```astro
 * <TestimonialsSection testimonials={[...]} />
 * ```
 */

interface Testimonial {
  /** The testimonial quote text */
  quote: string;
  /** Author's full name */
  author: string;
  /** Author's job title or role */
  role: string;
  /** Author's company name */
  company: string;
  /** Optional URL to author's avatar image */
  avatar?: string;
}

interface Props {
  /** Optional section heading title */
  title?: string;
  /** Optional section subtitle/description */
  subtitle?: string;
  /** Array of testimonials to display */
  testimonials: Testimonial[];
  /** Section background style */
  background?: 'default' | 'muted' | 'accent';
  /** Optional limit for number of testimonials to display */
  limit?: number;
  /** Optional footer link */
  footerLink?: { label: string; href: string };
}

const { title, subtitle, testimonials, background = 'default', limit, footerLink } = Astro.props;
const displayedTestimonials = limit ? testimonials.slice(0, limit) : testimonials;
const hasHeading = title || subtitle;

const bgClass = {
  default: 'bg-background',
  muted: 'bg-surface',
  accent: 'bg-primary/5',
}[background];

// Generate initials for avatar fallback
const getInitials = (name: string) =>
  name
    .split(' ')
    .map((n) => n[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
---

<section class:list={['py-section', bgClass]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      hasHeading && (
        <div class="text-center mb-12">
          {title && <h2 class="text-3xl sm:text-4xl font-bold text-text">{title}</h2>}
          {subtitle && <p class="mt-4 text-lg text-text-muted max-w-2xl mx-auto">{subtitle}</p>}
        </div>
      )
    }
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        displayedTestimonials.map((testimonial) => (
          <div class="p-6 rounded-lg bg-surface border border-border">
            <blockquote class="text-text leading-relaxed">"{testimonial.quote}"</blockquote>
            <div class="mt-6 flex items-center gap-4">
              {testimonial.avatar ? (
                <img
                  src={testimonial.avatar}
                  alt={testimonial.author}
                  class="w-12 h-12 rounded-full object-cover"
                />
              ) : (
                <div class="w-12 h-12 rounded-full bg-primary/10 text-primary flex items-center justify-center font-semibold">
                  {getInitials(testimonial.author)}
                </div>
              )}
              <div>
                <div class="font-semibold text-text">{testimonial.author}</div>
                <div class="text-sm text-text-muted">
                  {testimonial.role} at {testimonial.company}
                </div>
              </div>
            </div>
          </div>
        ))
      }
    </div>
    {/* Footer Link */}
    {
      footerLink && (
        <div class="text-center mt-10">
          <a
            href={footerLink.href}
            class="text-primary hover:text-primary-dark font-medium transition-colors"
          >
            {footerLink.label}
          </a>
        </div>
      )
    }
  </div>
</section>
