---
/**
 * FeaturesSection - Flexible features section with optional heading
 *
 * @description
 * A flexible features section that can display with or without title/subtitle.
 * Displays features in a responsive grid (1 column on mobile, 2 on tablet, 3 on desktop).
 *
 * @example With heading
 * ```astro
 * <FeaturesSection
 *   title="Everything you need to ship"
 *   subtitle="From development to production, we provide all the tools."
 *   features={[...]}
 * />
 * ```
 *
 * @example Grid only (no heading)
 * ```astro
 * <FeaturesSection features={[...]} />
 * ```
 */

import { Icon } from 'astro-icon/components';

interface Feature {
  /** Icon name from Lucide (e.g., "lucide:zap", "lucide:shield") */
  icon: string;
  /** Feature title text */
  title: string;
  /** Feature description text */
  description: string;
}

interface Props {
  /** Optional section heading title */
  title?: string;
  /** Optional section subtitle/description */
  subtitle?: string;
  /** Array of features to display */
  features: Feature[];
  /** Section background style */
  background?: 'default' | 'muted' | 'accent';
  /** Optional footer link */
  footerLink?: { label: string; href: string };
}

const { title, subtitle, features, footerLink, background = 'muted' } = Astro.props;
const hasHeading = title || subtitle;

const bgClass = {
  default: 'bg-background',
  muted: 'bg-surface',
  accent: 'bg-primary/5',
}[background];
---

<section class:list={['py-section', bgClass]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    {
      hasHeading && (
        <div class="text-center">
          {title && <h2 class="text-3xl sm:text-4xl font-bold text-text">{title}</h2>}
          {subtitle && <p class="mt-4 text-lg text-text-muted max-w-2xl mx-auto">{subtitle}</p>}
        </div>
      )
    }
    <div
      class:list={['grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8', { 'mt-12': hasHeading }]}
    >
      {
        features.map((feature, index) => (
          <div 
            class="feature-card p-6 rounded-lg bg-surface border border-border opacity-0 translate-y-8 transition-all duration-700 ease-out"
            style={`transition-delay: ${index * 100}ms;`}
          >
            <div class="feature-icon w-12 h-12 flex items-center justify-center rounded-md bg-primary/10 text-primary mb-4 transition-transform duration-500">
              <Icon name={feature.icon} class="w-6 h-6" aria-hidden="true" />
            </div>
            <h3 class="text-lg font-semibold text-text mb-2">{feature.title}</h3>
            <p class="text-text-muted leading-relaxed">{feature.description}</p>
          </div>
        ))
      }
    </div>
    {/* Footer Link */}
    {
      footerLink && (
        <div class="text-center mt-10">
          <a
            href={footerLink.href}
            class="text-primary hover:text-primary-dark font-medium transition-colors"
          >
            {footerLink.label}
          </a>
        </div>
      )
    }
  </div>
</section>

<style>
  .feature-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Parallax effect on icons when hovering or scrolling */
  .feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
  }
</style>

<script>
  function initFeaturesReveal() {
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px'
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          // Once visible, we don't need to observe anymore for "one-pass"
          observer.unobserve(entry.target);
        }
      });
    }, observerOptions);

    document.querySelectorAll('.feature-card').forEach(el => observer.observe(el));
  }

  // Initialize on load and on Astro page changes
  initFeaturesReveal();
  document.addEventListener('astro:page-load', initFeaturesReveal);
</script>
