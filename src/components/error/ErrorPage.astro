---
/**
 * ErrorPage - Reusable error page layout for HTTP error states
 *
 * @description
 * A centered error page component that displays an error code, title,
 * message, and optional action buttons. Used by 404, 500, and other
 * error pages for consistent error presentation.
 *
 * @example
 * ```astro
 * <ErrorPage
 *   code={404}
 *   title="Page not found"
 *   message="The page you're looking for doesn't exist."
 * />
 * ```
 *
 * @example Custom actions
 * ```astro
 * <ErrorPage
 *   code={500}
 *   title="Server error"
 *   message="Something went wrong on our end."
 *   showHomeButton={true}
 *   showContactButton={false}
 * />
 * ```
 */
import { siteConfig } from '@/config';

interface Props {
  /** HTTP error code displayed prominently */
  code: number;
  /** Error title/headline */
  title: string;
  /** Descriptive error message */
  message: string;
  /** Show "Go to Homepage" button */
  showHomeButton?: boolean;
  /** Show "Contact Support" button */
  showContactButton?: boolean;
}

const { code, title, message, showHomeButton = true, showContactButton = true } = Astro.props;
---

<div class="container mx-auto px-6 text-center">
  <div class="max-w-md mx-auto">
    <!-- Logo -->
    <div class="inline-flex items-center gap-2 mb-12">
      {
        siteConfig.logo ? (
          <img src={siteConfig.logo} alt={siteConfig.name} class="h-8 w-auto" />
        ) : (
          <span class="font-semibold text-xl text-text">{siteConfig.name}</span>
        )
      }
    </div>

    <!-- Error Code -->
    <p class="text-8xl font-bold text-primary mb-4">{code}</p>

    <!-- Title -->
    <h1 class="text-3xl md:text-4xl font-bold text-text mb-4">
      {title}
    </h1>

    <!-- Message -->
    <p class="text-lg text-text-muted mb-8">
      {message}
    </p>

    <!-- Actions -->
    {
      (showHomeButton || showContactButton) && (
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          {showHomeButton && (
            <a
              href="/"
              class="inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-medium rounded-md hover:bg-primary-dark transition-colors"
            >
              Go to Homepage
            </a>
          )}
          {showContactButton && (
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-6 py-3 border border-border text-text font-medium rounded-md hover:bg-surface transition-colors"
            >
              Contact Support
            </a>
          )}
        </div>
      )
    }
  </div>
</div>
